<aura:component controller="GameResultController" implements="flexipage:availableForAllPageTypes" >
    <aura:attribute name="data" type="Object" />
    <aura:attribute name="columns" type="List" />

    <aura:handler event="c:ResultApplicationEvent" action="{!c.onResultHandler}"></aura:handler>
    <aura:handler name="init" value="{! this}" action="{!c.doInit}"  ></aura:handler>


    <lightning:card title="Your results">
        <div class="slds-var-p-around_medium">
            <lightning:datatable keyField="id" data="{!v.data}" columns="{! v.columns}" hideCheckboxColumn="true"></lightning:datatable>
        </div>
    </lightning:card>
</aura:component>	
